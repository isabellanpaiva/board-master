<div class="container">

    <h2>Events list</h2>
    <hr>
    <div class="row">
        {{#each events}}
        <div class="col-3">
            <div class="card" style="width: 18rem;">
                <h3>{{title}}</h3>
                <h4>{{gameName}}</h4>
                <div class="card-body">
                    <h5 class="card-title">{{location}}</h5>

                    <a href="/events/details/{{id}}" class=" btn btn-outline-success">Details</a>

                    <a href="/events/edit/{{id}}" class=" btn btn-outline-warning">Edit</a>
                    <a href="/events/delete/{{id}}" class=" btn btn-outline-danger">Delete</a>


                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>