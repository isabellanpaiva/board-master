<h2 id="pageTitle"> Category: {{category_name}} </h2>

<div class="row mt-5 mb-5" id="#gamesSection">

    {{#each games}}

    <div class="col-3 mb-5" id="gamesInformation">

        <div class="card" id="gameCard">

            <div class="card-header" id="gameHeader">

                <img src="{{image_url}}" class="card-img-top " alt="{{name}}" id="gameCover">

            </div>

            <div class="card-body" id="gameBody">

                <h5 class="card-title">{{name}}</h5>

                <a href="/games/details/{{id}}" class=" btn btn-dark">Game details</a>

            </div>

        </div>

    </div>

    {{/each}}

</div>